{
  "name": "hospital-management-system",
  "version": "1.0.3",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "npm run schema:build && prisma generate && next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    
    "schema:build": "node prisma/scripts/build-schema.js",
    "schema:watch": "node prisma/scripts/watch-schema.js",
    "schema:validate": "npm run schema:build && prisma validate",
    
    "migrate:dev": "npm run schema:build && prisma migrate dev",
    "migrate:deploy": "npm run schema:build && prisma migrate deploy",
    "migrate:reset": "npm run schema:build && prisma migrate reset",
    
    "prisma:generate": "npm run schema:build && prisma generate",
    "prisma:studio": "npm run schema:build && prisma studio",
    "prisma:format": "npm run schema:build && prisma format",
    "prisma:push": "npm run schema:build && prisma db push",
    
    "db:seed": "npm run schema:build && npx prisma db seed -- --seed-file prisma/seed.js",
    "db:reset": "npm run schema:build && prisma migrate reset --force",
    
    "dev:full": "concurrently \"npm run schema:watch\" \"next dev\"",
    
    "prepare": "husky install",
    "send:reminders": "node scripts/sendReminders.js"
  },
  "dependencies": {
    "@emotion/react": "^11.13.3",
    "@emotion/styled": "^11.13.0",
    "@heroicons/react": "^2.1.5",
    "@mui/icons-material": "^6.1.4",
    "@mui/material": "^6.1.4",
    "@mui/x-data-grid": "^7.21.0",
    "@prisma/client": "^5.21.1",
    "axios": "^1.7.7",
    "bcryptjs": "^2.4.3",
    "chart.js": "^4.4.5",
    "firebase": "^10.14.1",
    "jsonwebtoken": "^9.0.2",
    "jwt-decode": "^4.0.0",
    "next": "^14.2.15",
    "nodemailer": "^6.9.15",
    "pg": "^8.16.0",
    "react": "^18.3.1",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.14",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.26.0",
    "@testing-library/jest-dom": "^6.6.2",
    "@testing-library/react": "^16.0.1",
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.1",
    "eslint-config-next": "^14.2.15",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.47",
    "prisma": "^5.21.1"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  }
}
